    <style name="CalendarWeekDayText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#D7819E</item> <!-- Set weekday text color -->
        <item name="android:textStyle">italic</item> <!-- Custom text style -->
    </style>

</resources>
