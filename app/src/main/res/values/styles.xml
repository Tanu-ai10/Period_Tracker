<resources>

    <!-- Base application theme -->
    <style name="Theme.periodtracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FF95B9</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#E91E63</item> <!-- Set date text color -->
        <item name="android:textStyle">bold</item> <!-- You can also make the text bold, italic, etc. -->
